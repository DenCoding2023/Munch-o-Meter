<!DOCTYPE html>
<html>
<head>
  <title>Nutrition Table</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <style>
    .table-container {
      width: 100%;
      margin-bottom: 1rem;
    }

    .search-history-container {
      display: flex;
      justify-content: space-between;
      margin-bottom: 1rem;
    }

    .search-history-log {
      width: 49%;
    }
  </style>
</head>
<body>
  
  <h1 class="mt-4">Nutrition Table</h1>

  <h2 class="mt-4">Please enter the Name of the food you want information on!</h2>

  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Name and Serving Size</h2>
            <form id="meal-form">
              <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="form-group">
                <label for="serving-size">Serving Size:</label>
                <input type="text" class="form-control" id="serving-size" name="servingSize" required>
              </div>
              <button type="button" class="btn btn-primary" id="search-button">Search</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Date and Meal Type</h2>
            <form id="meal-form">
              <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="date" name="date" required>
              </div>
              <div class="form-group">
                <label for="meal-type">Meal Type:</label>
                <select class="form-control" id="meal-type" name="mealType" required>
                  <option value="">Select Meal Type</option>
                  <option value="breakfast">Breakfast</option>
                  <option value="lunch">Lunch</option>
                  <option value="dinner">Dinner</option>
                  <option value="snack">Snack</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">Add Meal</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="table-container">
          <div class="row align-center mb-5">
    <div>
        <h2>Hi, {{user.username}}!</h2>
        <h5>Here is your food history:</h5>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Food Name</th>
            <th scope="col">Amount</th>
            <th scope="col">Meal Type</th>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
          {{#each foods as |food|}}
            <tr>
              <td>{{food.name}}</td>
              <td>{{food.serving_amount}}</td>
              <td>{{food.meal_type}}</td>
              <td>{{food.date_time}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-6">
        <div class="search-history-container">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Search History</h2>
              <form id="search-history-form">
                <div class="form-group">
                  <label for="search-data">Search Data:</label>
                  <textarea class="form-control" id="search-data" name="searchData" required></textarea>
                </div>
                <div class="form-group">
                  <label for="search-date">Date and Time:</label>
                  <input type="datetime-local" class="form-control" id="search-date" name="searchDate" required>
                </div>
                <button type="submit" class="btn btn-primary">Add to History</button>
              </form>
            </div>
          </div>
          <div class="card search-history-log">
            <div class="card-body" id="search-history">
              <h2 class="card-title">Search History Log</h2>
              <!-- Search history entries will be dynamically added here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{!-- Here is hte recepie search area --}}

  <div class="row">
    <div class="col-md-12">
      <div class="card mt-4">
        <div class="card-body">
          <h2 class="card-title">Search Recipes</h2>
          <form id="recipe-search-form">
            <div class="form-group">
              <label for="recipe-input">Enter food Recipe Name:</label>
              <input type="text" class="form-control" id="recipe-input" name="recipeInput" required>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
          <div class="mt-4" id="recipe-results">
            <!-- Recipe search results will be dynamically added here -->
          </div>
        </div>
      </div>
    </div>
  </div>




  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
  <script>
    // Handle the form submission for adding a meal
    document.getElementById("meal-form").addEventListener("submit", function(event) {
      event.preventDefault();

      // Retrieve the form data
      const formData = new FormData(event.target);
      const mealData = Object.fromEntries(formData.entries());

      // Add the new meal to the table
      const tableBody = document.querySelector("table tbody");
      const newRow = document.createElement("tr");
      newRow.innerHTML = `
        <td>${mealData.name}</td>
        <td>${mealData.servingSize}</td>
        <td>${mealData.calories}</td>
        <td>${mealData.totalFat}</td>
        <td>${mealData.date}</td>
        <td>${mealData.mealType}</td>
      `;
      tableBody.appendChild(newRow);

      // Reset the form
      event.target.reset();
    });

    // Handle the form submission for adding to search history
    document.getElementById("search-history-form").addEventListener("submit", function(event) {
      event.preventDefault();

      // Retrieve the form data
      const formData = new FormData(event.target);
      const searchData = Object.fromEntries(formData.entries());

      // Add the new entry to the search history
      const searchHistory = document.getElementById("search-history");
      const newEntry = document.createElement("div");
      newEntry.classList.add("alert", "alert-success", "mt-2");
      newEntry.innerHTML = `
        <p>${searchData.searchData}</p>
        <small>${searchData.searchDate}</small>
      `;
      searchHistory.appendChild(newEntry);

      // Reset the form
      event.target.reset();
    });
  </script>
</body>
</html>
