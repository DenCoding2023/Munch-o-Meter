    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Name and Serving Size</h2>
            <form id="meal-form">
              <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
              </div>
              <div class="form-group">
                <label for="serving-size">Serving Size:</label>
                <input type="text" class="form-control" id="serving-size" name="servingSize" required>
              </div>
              <button type="button" class="btn btn-primary" id="search-button">Search</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Date and Meal Type</h2>
            <form id="meal-form">
              <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="date" name="date" required>
              </div>
              <div class="form-group">
                <label for="meal-type">Meal Type:</label>
                <select class="form-control" id="meal-type" name="mealType" required>
                  <option value="">Select Meal Type</option>
                  <option value="breakfast">Breakfast</option>
                  <option value="lunch">Lunch</option>
                  <option value="dinner">Dinner</option>
                  <option value="snack">Snack</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary" id="add-meal-btn">Add Meal</button>
            </form>
          </div>
        </div>

      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="table-container">
          <div class="row align-center mb-5">
            <div>
              <h2>Hi, {{user.username}}!</h2>
              <h5>Here is your food history:</h5>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Food Name</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Meal Type</th>
                    <th scope="col">Date</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each foods as |food|}}
                    <tr>
                      <td>{{food.name}}</td>
                      <td>{{food.serving_amount}}</td>
                      <td>{{food.meal_type}}</td>
                      <td>{{food.date_time}}</td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
